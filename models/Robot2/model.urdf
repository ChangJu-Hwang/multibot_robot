<?xml version="1.0" ?>
<robot name="ISR_M2"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="base_footprint"/>

  <link name="odom"/>

  <joint name="odom_joint" type="fixed">
    <parent link="odom"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="-0.2 0.0 0.065" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.6 0.4 0.25"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="-0.2 0.0 0.065" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.6 0.4 0.25"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.16" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.166667" ixy="0.0" ixz="0.0" iyy="0.166667" iyz="0.0" izz="0.166667" />
    </inertial>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <parent link="base_link"/>
    <child link="hokuyo"/>
    <origin xyz="0.05 0 0.38" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="hokuyo">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.041"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1" />
      <origin xyz="0.05 0 038" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <gazebo reference="hokuyo">
    <sensor name="laser" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <pose>0 0 0 0 0 0</pose>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>640</samples>
            <resolution>1.000000</resolution>
            <min_angle>-2.26889</min_angle>
            <max_angle>2.26889</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.08</min>
          <max>10</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="laserscan" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>hokuyo</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>